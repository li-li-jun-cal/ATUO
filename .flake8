[flake8]
# 最大行长度
max-line-length = 120

# 忽略的错误代码
ignore =
    # E203: whitespace before ':' (与black冲突)
    E203,
    # W503: line break before binary operator (与black冲突)
    W503,
    # E501: line too long (由max-line-length处理)
    # E402: module level import not at top of file

# 排除的目录
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    programs/archive,
    scripts/archive,

# 每个文件最大复杂度
max-complexity = 15

# 显示统计信息
statistics = True
count = True
