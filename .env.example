# DY-Interaction 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ========== API 配置 ==========
# 抖音 API 密钥（从服务商获取）
DOUYIN_API_KEY=your_api_key_here
DOUYIN_API_SECRET=your_api_secret_here

# API 服务器地址
API_SERVER_URL=https://api.example.com
API_BACKUP_URL=https://backup-api.example.com

# ========== Cookie 配置 ==========
# 抖音 Cookie（用于爬虫）
DOUYIN_COOKIE=your_cookie_here

# ========== 数据库配置 ==========
# 数据库路径
DATABASE_URL=sqlite:///data/dy_interaction.db

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ========== 设备配置 ==========
# ADB 路径（如果不在系统PATH中）
ADB_PATH=/usr/bin/adb

# ========== 安全配置 ==========
# 加密密钥（用于敏感数据加密，至少32字节）
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ========== 日志配置 ==========
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志目录
LOG_DIR=./logs

# ========== API 限流配置 ==========
# 每秒最大请求数
API_RATE_LIMIT=10

# 突发流量大小
API_BURST_SIZE=20

# ========== 任务配置 ==========
# 每日操作配额
DAILY_FOLLOW_QUOTA=50
DAILY_LIKE_QUOTA=100
DAILY_COMMENT_QUOTA=30
DAILY_COLLECT_QUOTA=20

# 任务重试次数
MAX_RETRY_COUNT=3

# ========== 其他配置 ==========
# Debug 模式
DEBUG=False

# 启用性能监控
ENABLE_PERFORMANCE_MONITORING=False
